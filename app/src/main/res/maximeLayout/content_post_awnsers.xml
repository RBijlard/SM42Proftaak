<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.roel.qstudent.Activitys.postAwnsers"
    android:background="@color/white"
    tools:showIn="@layout/activity_post_awnsers">

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:text="@string/txtPostName"
        android:layout_width="wrap_content"
        android:id="@+id/postStudentAwnserQuestionTitle"
        android:textSize="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dip"
        android:layout_height="125dip"
        android:id="@+id/postStudentAwnserQuestionPicture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dip" />

    <TextView
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_width="wrap_content"
        android:id="@+id/postStudentAwnserQuestionName"
        android:layout_below="@+id/postStudentAwnserQuestionPicture"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="130dip"
        android:textSize="15dp" />

    <TextView
        style="@style/post_textsize"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_width="wrap_content"
        android:id="@+id/postStudentAwnserQuestionText"
        android:layout_toRightOf="@+id/postStudentAwnserQuestionPicture"
        android:layout_below="@+id/postStudentAwnserQuestionTitle"
        android:layout_marginTop="3dip" />

    <TextView
        style="@style/post_textsize"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_width="wrap_content"
        android:id="@+id/postStudentPoints"
        android:layout_marginTop="240dip"
        android:layout_marginLeft="295dip"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postUpVote"

        android:layout_toRightOf="@+id/postStudentAwnserQuestionText"
        android:layout_toEndOf="@+id/postStudentAwnserQuestionText"
        android:layout_marginLeft="-50dip"
        android:layout_marginTop="180dip"
        android:src="@mipmap/upvote"
        android:background="@color/white"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postDownVote"
        android:layout_below="@+id/postStudentPoints"
        android:layout_toRightOf="@+id/postStudentAwnserQuestionText"
        android:layout_toEndOf="@+id/postStudentAwnserQuestionText"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="-50dip"
        android:src="@mipmap/downvote"
        android:background="@color/white"/>

</RelativeLayout>
