<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/postStudentPicture"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/postTitle"
        style="@style/post_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:layout_toRightOf="@+id/postStudentPicture"
        android:text="Title: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/postStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postTitle"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@+id/postStudentPicture"
        android:text="Name: " />

    <TextView
        android:id="@+id/postStudenAmountOfAwnsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postStudentName"
        android:layout_marginLeft="170dip"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@+id/postStudentPicture"
        android:text="0" />

    <TextView
        android:id="@+id/postStudentAwnsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postStudenAmountOfAwnsers"
        android:layout_marginLeft="135dip"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@+id/postStudentPicture"
        android:text="Antwoorden" />

</RelativeLayout>