<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.roel.qstudent.Activitys.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="125dp"
            android:minWidth="125dp"
            android:src="@mipmap/ic_kerel" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:text="Bertje Bertsma"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primaryOrange"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:text="Voor jou"
                android:textColor="@color/primaryOrange"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <ListView
                android:id="@+id/mainVoorJouList"
                android:layout_width="wrap_content"
                android:layout_height="175dp"
                android:divider="@android:color/transparent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:text="Help anderen"
                android:textColor="@color/primaryOrange"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <ListView
                android:id="@+id/mainHelpAnderenList"
                android:layout_width="wrap_content"
                android:layout_height="175dp"
                android:divider="@android:color/transparent" />
            </LinearLayout>
        </ScrollView>
</LinearLayout>
